<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:layout_weight="6"
    android:orientation="vertical"
    tools:context=".MainActivity" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0"
            android:textColor="@color/white"
            android:textSelectHandleLeft="0"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="C"
                android:textSize="25dp"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:text="MC"
                android:textSize="25dp"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"

                app:backgroundTint="@color/cardview_dark_background" />
            <Button
                android:text="MR"
                android:textSize="25dp"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                app:backgroundTint="@color/cardview_dark_background"/>
            <Button
                android:text="M+"
                android:textSize="25dp"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                app:backgroundTint="@color/cardview_dark_background"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/backspace_white"
                android:drawablePadding="2dip"
                android:gravity="center"
                android:paddingLeft="33dip"
                android:paddingRight="26dip"
                android:singleLine="true"
                app:backgroundTint="@color/cardview_dark_background"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/plus_minus_white"
                android:drawablePadding="2dip"
                android:gravity="center"
                android:paddingLeft="33dip"
                android:paddingRight="26dip"
                android:singleLine="true"
                app:backgroundTint="@color/cardview_dark_background" />

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/percentage_white"
                android:drawablePadding="2dip"
                android:paddingLeft="33dip"
                android:paddingRight="26dip"
                android:singleLine="true"
                android:gravity="center"
                app:backgroundTint="@color/cardview_dark_background"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/divide_white"
                android:drawablePadding="2dip"
                android:gravity="center"
                android:paddingLeft="33dip"
                android:paddingRight="26dip"
                android:singleLine="true"
                android:src="@drawable/divide_white"
                app:backgroundTint="@color/cardview_dark_background" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="7"
                android:textSize="25dp"
                app:backgroundTint="#191919" />

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="8"
                android:textSize="25dp"
                app:backgroundTint="#191919" />

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="9"
                android:textSize="25dp"
                app:backgroundTint="#191919" />
            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/multiply_white"
                android:drawablePadding="2dip"
                android:gravity="center"
                android:paddingLeft="33dip"
                android:paddingRight="26dip"
                android:singleLine="true"
                app:backgroundTint="@color/cardview_dark_background" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4"
                android:textSize="25dp"
                app:backgroundTint="#191919" />

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5"
                android:textSize="25dp"
                app:backgroundTint="#191919" />

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6"
                android:textSize="25dp"
                app:backgroundTint="#191919" />
            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/minus_white"
                android:drawablePadding="2dip"
                android:gravity="center"
                android:paddingLeft="33dip"
                android:paddingRight="26dip"
                android:singleLine="true"
                app:backgroundTint="@color/cardview_dark_background" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textSize="25dp"
                app:backgroundTint="#191919" />

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textSize="25dp"
                app:backgroundTint="#191919" />

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textSize="25dp"
                app:backgroundTint="#191919" />
            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/plus_white"
                android:drawablePadding="2dip"
                android:gravity="center"
                android:paddingLeft="33dip"
                android:paddingRight="26dip"
                android:singleLine="true"
                app:backgroundTint="@color/cardview_dark_background" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">


            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="0"
                android:textSize="25dp"
                app:backgroundTint="#191919" />

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="."
                android:textSize="25dp"
                app:backgroundTint="#191919" />

            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:layout_weight="1"

                android:drawableLeft="@drawable/equal_white"
                android:drawablePadding="2dip"
                android:gravity="center"
                android:paddingLeft="33dip"
                android:paddingRight="26dip"
                android:singleLine="true"
                app:backgroundTint="#CA913E"
                app:rippleColor="#FF9800" />

        </LinearLayout>



    </LinearLayout>




</LinearLayout>